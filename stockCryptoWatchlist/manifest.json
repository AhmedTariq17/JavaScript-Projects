{
  "manifest_version": 3,
  "name": "Crypto & Stock Tracker",
  "version": "1.1",
  "description": "Track cryptocurrency and stock prices, set alerts, monitor portfolios, and stay updated on market news.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Crypto & Stock Tracker"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
